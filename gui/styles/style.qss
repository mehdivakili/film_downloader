QWidget {
    margin: 0;
    padding: 0;
}



#menu,#middle-menu,#bottom-menu,#film-list{
    background: #34495e;
    border:none;
    font-size: 25px;
    outline: 0;
    margin:0;
    padding: 0;
}

QMainWindow{
    background: #2c3e50;
}

#menu::item,#bottom-menu::item,#film-list::item {
    height: 60px;
    color: white;
    border: none;
    outline: 0;

}

#menu::item:selected,#bottom-menu::item:selected {
    background: #2c3e50;
    border: none;
    outline: 0;
}

#menu::item:hover,#bottom-menu::item:hover,#film-list::item:hover {
    background:#2980b9;
}
*[cssClass="watched-widget-text"]{
    background:white;
    padding: 5px 10px 5px 10px;
    font-weight: 700;
    color: #e74c3c;
    font-size: 15px;
    border-radius: 10px;
}

QPushButton[cssClass="watched-widget"]{
    border:none;

    margin-right:10px;
    background:#e74c3c;
    padding: 5px;
    font-weight: 700;
    color: white;
    font-size: 15px;
    width: 75px;
    border-radius: 10px;


}
QPushButton[cssClass="watched-widget"]:pressed{
    background: #c0392b;
}

#new-episodes-title{
    color: white;
    font-size: 25px;

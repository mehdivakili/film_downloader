    color: white;
    font-size: 25px;
    margin-top: 10px;
    font-weight: 600;
}

QProgressBar[cssClass="download-widget"] {
    border: 2px solid gray;
    border-radius: 5px;
    font-weight: 500;
    color: white;
    background: #34495e;


}

QProgressBar[cssClass="download-widget"]::chunk {
    background-color: #27ae60;
    width: 20px;
}

